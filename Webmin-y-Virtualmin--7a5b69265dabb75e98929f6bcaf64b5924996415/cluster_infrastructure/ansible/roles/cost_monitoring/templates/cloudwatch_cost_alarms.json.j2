{
    "AlarmName": "{{ cluster_name }}-high-cost-alarm",
    "AlarmDescription": "Alarma activada cuando los costos diarios exceden el umbral",
    "MetricName": "EstimatedCharges",
    "Namespace": "AWS/Billing",
    "Statistic": "Maximum",
    "Dimensions": [
        {
            "Name": "Currency",
            "Value": "USD"
        }
    ],
    "Period": 86400,
    "EvaluationPeriods": 1,
    "Threshold": {{ cost_monitoring.budget_limit | int / 30 }},
    "ComparisonOperator": "GreaterThanThreshold",
    "ActionsEnabled": true,
    "AlarmActions": [
        {% for email in cost_monitoring.alert_emails %}
        "arn:aws:sns:{{ aws_region }}:{{ aws_account_id }}:{{ cluster_name }}-cost-alerts"
        {% if not loop.last %},{% endif %}
        {% endfor %}
    ],
    "OKActions": [],
    "InsufficientDataActions": []
}