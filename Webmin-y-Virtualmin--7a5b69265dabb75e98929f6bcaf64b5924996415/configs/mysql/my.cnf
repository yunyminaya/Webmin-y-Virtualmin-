# MySQL/MariaDB Configuration PRO
# Optimizada para máximo rendimiento y seguridad

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

[mysqld]

# Configuración básica PRO
bind-address = 127.0.0.1
port = 3306
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid

# Configuración de memoria PRO - Optimizada para servidores con 4GB+ RAM
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Configuración de conexiones PRO
max_connections = 200
max_connect_errors = 100000
wait_timeout = 28800
interactive_timeout = 28800
connect_timeout = 10

# Configuración de cache PRO
query_cache_size = 128M
query_cache_type = ON
query_cache_limit = 2M
table_open_cache = 4096
thread_cache_size = 16
tmp_table_size = 128M
max_heap_table_size = 128M

# Configuración de logs PRO
slow_query_log = ON
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2
log_error = /var/log/mysql/error.log
general_log = OFF
general_log_file = /var/log/mysql/mysql.log

# Configuración SSL PRO
ssl-ca = /etc/mysql/ssl/ca.pem
ssl-cert = /etc/mysql/ssl/server-cert.pem
ssl-key = /etc/mysql/ssl/server-key.pem

# Configuración de seguridad PRO
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
skip-name-resolve
secure-file-priv = /var/lib/mysql-files

# Configuración de InnoDB PRO
innodb_file_per_table = ON
innodb_open_files = 400
innodb_io_capacity = 400
innodb_read_io_threads = 4
innodb_write_io_threads = 4
innodb_purge_threads = 4

# Configuración de MyISAM PRO (por compatibilidad)
key_buffer_size = 64M
myisam_sort_buffer_size = 64M

# Configuración de red PRO
net_read_timeout = 30
net_write_timeout = 60
net_buffer_length = 16384
max_allowed_packet = 64M

# Configuración de caracteres PRO
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Configuración de timezone PRO
default-time-zone = SYSTEM
log_timestamps = SYSTEM

# Configuración de backup PRO
[mysqldump]
quick
quote-names
max_allowed_packet = 64M
default-character-set = utf8mb4

[mysqladmin]
socket = /var/run/mysqld/mysqld.sock

# Configuración de herramientas PRO
[myisamchk]
key_buffer_size = 128M
sort_buffer_size = 128M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout
